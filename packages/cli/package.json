{
  "name": "@blockspool/cli",
  "version": "0.5.43",
  "description": "BlockSpool CLI - Continuous codebase improvement tool",
  "author": "BlockSpool",
  "homepage": "https://blockspool.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockspool/blockspool.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/blockspool/blockspool/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blockspool": "dist/bin/blockspool.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/bin/blockspool.ts"
  },
  "keywords": [
    "blockspool",
    "cli",
    "ai",
    "coding",
    "automation",
    "scout",
    "improvement",
    "milestone",
    "parallel",
    "pr-generation",
    "claude",
    "refactoring"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@blockspool/core": "^0.5.32",
    "@blockspool/sqlite": "^0.5.32",
    "@types/minimatch": "^5.1.2",
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "minimatch": "^10.1.1",
    "neo-blessed": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3"
  }
}
