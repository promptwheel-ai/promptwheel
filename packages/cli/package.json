{
  "name": "@promptwheel/cli",
  "version": "0.6.0",
  "description": "PromptWheel CLI - Continuous codebase improvement tool",
  "author": "PromptWheel",
  "homepage": "https://promptwheel.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promptwheel-ai/promptwheel.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/promptwheel-ai/promptwheel/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "promptwheel": "dist/bin/promptwheel.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "npx tsc && chmod +x dist/bin/promptwheel.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/bin/promptwheel.ts"
  },
  "keywords": [
    "promptwheel",
    "cli",
    "ai",
    "coding",
    "automation",
    "scout",
    "improvement",
    "milestone",
    "parallel",
    "pr-generation",
    "claude",
    "refactoring"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@promptwheel/core": "^0.6.0",
    "@promptwheel/sqlite": "^0.6.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "minimatch": "^10.1.1",
    "neo-blessed": "^0.2.0"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3"
  }
}
