{
  "name": "@blockspool/cli",
  "version": "0.1.0",
  "description": "BlockSpool CLI - Autonomous coding swarm for your codebase",
  "author": "BlockSpool",
  "homepage": "https://blockspool.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockspool/blockspool.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/blockspool/blockspool/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blockspool": "./dist/bin/blockspool.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/bin/blockspool.ts"
  },
  "keywords": [
    "blockspool",
    "cli",
    "ai",
    "coding",
    "automation",
    "autonomous",
    "scout",
    "improvement",
    "milestone",
    "parallel",
    "pr-generation",
    "claude",
    "refactoring"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@blockspool/core": "^0.1.0",
    "@blockspool/sqlite": "^0.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "neo-blessed": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3"
  }
}
