{
  "name": "@blockspool/mcp",
  "version": "0.5.3",
  "description": "BlockSpool MCP server - stateful tool provider for Claude Code",
  "author": "BlockSpool",
  "homepage": "https://blockspool.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockspool/blockspool.git",
    "directory": "packages/mcp"
  },
  "bugs": {
    "url": "https://github.com/blockspool/blockspool/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blockspool-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./direct-client": {
      "types": "./dist/direct-client.d.ts",
      "import": "./dist/direct-client.js"
    },
    "./formulas": {
      "types": "./dist/formulas.d.ts",
      "import": "./dist/formulas.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "tsc"
  },
  "keywords": [
    "blockspool",
    "mcp",
    "model-context-protocol",
    "claude-code",
    "tools"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@blockspool/core": "^0.3.0",
    "@blockspool/sqlite": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/minimatch": "^5.1.2",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3"
  }
}
